<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BottomNavigation">

        <!-- default background color in shifting mode -->
        <attr name="bbn_shifting_backgroundColor" format="color" />

        <!-- shifting mode, inactive icon alpha (0..1) -->
        <attr name="bbn_shiftingItemInactiveAlpha" format="float" />

        <!-- shifting mode, active icon/text color -->
        <attr name="bbn_shiftingItemColorActive" format="color" />

        <!-- default background color in fixed mode -->
        <attr name="bbn_fixed_backgroundColor" format="color" />

        <attr name="bbn_entries" format="reference" />

        <!-- when using the invertedTheme, this is the default icon/text color -->
        <attr name="bbn_invertedColorInactive" format="color" />

        <!-- fixed theme, inactive icon & text color -->
        <attr name="bbn_fixedItemColorInactive" format="color" />
        <!-- fixed theme, active icon & text color -->
        <attr name="bbn_fixedItemColorActive" format="color" />

        <!-- ripple selector color -->
        <attr name="bbn_rippleColor" format="color" />

    </declare-styleable>

    <!-- Base attributes that are available to all Item objects. -->
    <declare-styleable name="BottomNavigationMenuItem">
        <!-- The ID of the item. -->
        <attr name="android:id" />

        <!-- The title associated with the item. -->
        <attr name="android:title" />

        <!-- The icon associated with this item.  This icon will not always be shown, so
             the title should be sufficient in describing this item. -->
        <attr name="android:icon" />

        <!-- Whether the item is enabled. -->
        <attr name="android:enabled" />

        <attr name="android:color" />

    </declare-styleable>

</resources>